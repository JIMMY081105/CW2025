<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<StackPane fx:id="selectionRoot" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.comp2042.view.ModeSelectionController"
           styleClass="selection-root">
    <VBox alignment="CENTER" spacing="26">
        <Label fx:id="titleLabel" text="Select Option" styleClass="selection-title"/>
        <Button fx:id="optionOne" text="Option 1" onAction="#handleOptionOne" styleClass="selection-ellipse"/>
        <Button fx:id="optionTwo" text="Option 2" onAction="#handleOptionTwo" styleClass="selection-ellipse"/>
        <Button fx:id="optionThree" text="Option 3" onAction="#handleOptionThree" styleClass="selection-ellipse"/>
    </VBox>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>
