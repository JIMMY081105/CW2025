<?import com.comp2042.view.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:id="rootPane" fx:controller="com.comp2042.view.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <!-- Visual frame only - no content inside -->
    <BorderPane styleClass="gameBoard" fx:id="gameBoard"/>
    <!-- Grid lines layer - positioned manually -->
    <Pane fx:id="gridLinesPane"/>
    <!-- Background grid (landed pieces) - positioned manually -->
    <GridPane fx:id="gamePanel"/>
    <!-- Active falling piece - positioned manually -->
    <GridPane fx:id="brickPanel"/>
    
    <VBox fx:id="sidePanel" alignment="TOP_CENTER">
        <Label text="SCORE" style="-fx-font-size: 16px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Text fx:id="scoreValue" text="0" styleClass="scoreClass"/>
        <VBox fx:id="nextBricksContainer" alignment="TOP_CENTER" spacing="8">
            <Label text="NEXT 3" style="-fx-font-size: 16px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <VBox fx:id="nextBricksList" spacing="10" alignment="CENTER"/>
        </VBox>
        <ToggleButton fx:id="pauseButton" text="Pause" onAction="#pauseGame" focusTraversable="false" prefWidth="100"/>
        <Button text="New Game" onAction="#newGame" focusTraversable="false" prefWidth="100"/>
    </VBox>

    <Group fx:id="groupNotification">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>
